{
  MultiLayerConfiguration c=new NeuralNetConfiguration.Builder().nIn(4).nOut(3).weightInit(WeightInit.DISTRIBUTION).dist(new NormalDistribution(0,0.1)).activationFunction("sigmoid").optimizationAlgo(oa).updater((oa == OptimizationAlgorithm.STOCHASTIC_GRADIENT_DESCENT ? Updater.SGD : Updater.ADAGRAD)).iterations(nIterations).batchSize(5).constrainGradientToUnitNorm(false).corruptionLevel(0.0).learningRate(0.01).regularization(true).l2(0.01).applySparsity(false).sparsity(0.0).seed(12345L).list(4).layer(0,new DenseLayer.Builder().nIn(4).nOut(8).build()).layer(1,new DenseLayer.Builder().nIn(8).nOut(10).build()).layer(2,new DenseLayer.Builder().nIn(10).nOut(5).build()).layer(3,new OutputLayer.Builder(LossFunction.NEGATIVELOGLIKELIHOOD).activation("softmax").nIn(5).nOut(3).build()).backprop(true).pretrain(false).build();
  return c;
}

{
  if (fileIterator.hasNext()) {
    try {
      File next=fileIterator.next();
      if (next.getAbsolutePath().endsWith(".gz"))       currLineIterator=IOUtils.lineIterator(new BufferedInputStream(new GZIPInputStream(new FileInputStream(next))),"UTF-8");
 else       currLineIterator=FileUtils.lineIterator(next);
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
}

{
  String remoteName=rootDir.isEmpty() ? new File(script).getName() : rootDir + "/" + script;
  upload(new File(script),remoteName);
  Session session=getSession();
  session.connect();
  ChannelExec channel=(ChannelExec)session.openChannel("exec");
  String remoteCommand=remoteName.charAt(0) != '/' ? "./" + remoteName : remoteName;
  channel.setCommand("chmod +x " + remoteCommand + " && "+ remoteCommand);
  channel.setErrStream(System.err);
  channel.setPty(true);
  channel.setOutputStream(System.out);
  channel.connect();
  channel.start();
  InputStream input=channel.getInputStream();
  byte[] tmp=new byte[1024];
  while (true) {
    while (input.available() > 0) {
      int i=input.read(tmp,0,1024);
      if (i < 0)       break;
      log.info(new String(tmp,0,i));
    }
    if (channel.isClosed()) {
      log.info("exit-status: " + channel.getExitStatus());
      break;
    }
    Thread.sleep(1000);
  }
  channel.disconnect();
  session.disconnect();
}

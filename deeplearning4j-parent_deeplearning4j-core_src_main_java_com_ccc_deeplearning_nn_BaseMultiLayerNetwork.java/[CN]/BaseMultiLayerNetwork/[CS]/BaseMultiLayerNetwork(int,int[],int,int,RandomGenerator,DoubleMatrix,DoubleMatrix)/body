{
  this.nIns=nIn;
  this.hiddenLayerSizes=hiddenLayerSizes;
  this.input=input.dup();
  this.labels=labels.dup();
  if (hiddenLayerSizes.length != nLayers)   throw new IllegalArgumentException("The number of hidden layer sizes must be equivalent to the nLayers argument which is a value of " + nLayers);
  this.nOuts=nOuts;
  this.nLayers=nLayers;
  this.sigmoidLayers=new HiddenLayer[nLayers];
  this.layers=createNetworkLayers(nLayers);
  if (rng == null)   this.rng=new MersenneTwister(123);
 else   this.rng=rng;
  if (input != null)   initializeLayers(input);
}

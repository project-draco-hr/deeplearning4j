{
  if (!conf.isUseRegularization() || conf.getL1() <= 0.0)   return 0.0;
  double l1=Transforms.abs(getParam(GravesLSTMParamInitializer.RECURRENT_WEIGHTS)).sum(Integer.MAX_VALUE).getDouble(0) + Transforms.abs(getParam(GravesLSTMParamInitializer.INPUT_WEIGHTS)).sum(Integer.MAX_VALUE).getDouble(0);
  return conf.getL1() * l1;
}

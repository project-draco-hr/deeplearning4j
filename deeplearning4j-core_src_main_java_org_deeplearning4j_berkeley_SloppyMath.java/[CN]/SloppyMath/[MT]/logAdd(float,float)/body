{
  float max, negDiff;
  if (lx > ly) {
    max=lx;
    negDiff=ly - lx;
  }
 else {
    max=ly;
    negDiff=lx - ly;
  }
  if (max == Double.NEGATIVE_INFINITY) {
    return max;
  }
 else   if (negDiff < -LOGTOLERANCE_F) {
    return max;
  }
 else {
    return max + (float)Math.log(1.0f + Math.exp(negDiff));
  }
}

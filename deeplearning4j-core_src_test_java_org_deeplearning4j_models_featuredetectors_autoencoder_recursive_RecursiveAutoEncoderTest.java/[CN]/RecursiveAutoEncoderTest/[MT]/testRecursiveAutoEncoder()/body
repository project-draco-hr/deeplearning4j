{
  MnistDataFetcher fetcher=new MnistDataFetcher(true);
  NeuralNetConfiguration conf=new NeuralNetConfiguration.Builder().momentum(0.9f).optimizationAlgo(OptimizationAlgorithm.ITERATION_GRADIENT_DESCENT).corruptionLevel(0.3).weightInit(WeightInit.VI).iterations(100).iterationListener(new ScoreIterationListener(10)).lossFunction(LossFunctions.LossFunction.RECONSTRUCTION_CROSSENTROPY).rng(new MersenneTwister(123)).learningRate(1e-1f).nIn(784).nOut(600).build();
  fetcher.fetch(10);
  DataSet d2=fetcher.next();
  INDArray input=d2.getFeatureMatrix();
  LayerFactory layerFactory=LayerFactories.getFactory(RecursiveAutoEncoder.class);
  RecursiveAutoEncoder da=layerFactory.create(conf);
  da.setParams(da.params());
  da.fit(input);
}

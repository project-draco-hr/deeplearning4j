def plot_multiple_matrices(paths):
    count = 231
    graph_count = 1
    print paths
    for i in xrange((len(paths) - 1)):
        if ((i % 2) == 0):
            path = paths[i]
            title = paths[(i + 1)]
            print (('Loading matrix ' + path) + '\n')
            matrix = from_file(path)
            subplot(2, 3, graph_count)
            plot.tight_layout()
            hist_matrix(matrix, False, chart_title=title)
            graph_count += 1
    plot.show()

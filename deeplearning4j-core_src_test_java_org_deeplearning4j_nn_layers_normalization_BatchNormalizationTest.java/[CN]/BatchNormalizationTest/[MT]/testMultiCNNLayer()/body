{
  MultiLayerConfiguration conf=new NeuralNetConfiguration.Builder().optimizationAlgo(OptimizationAlgorithm.LINE_GRADIENT_DESCENT).iterations(1).seed(123).list().layer(0,new ConvolutionLayer.Builder().nIn(1).nOut(6).weightInit(WeightInit.XAVIER).activation("relu").build()).layer(1,new BatchNormalization.Builder().build()).layer(2,new DenseLayer.Builder().nOut(2).build()).layer(3,new OutputLayer.Builder(LossFunctions.LossFunction.MCXENT).weightInit(WeightInit.XAVIER).activation("softmax").nIn(2).nOut(10).build()).backprop(true).pretrain(false).cnnInputSize(28,28,1).build();
  MultiLayerNetwork network=new MultiLayerNetwork(conf);
  network.init();
  DataSetIterator iter=new MnistDataSetIterator(2,2);
  DataSet next=iter.next();
  network.fit(next);
}

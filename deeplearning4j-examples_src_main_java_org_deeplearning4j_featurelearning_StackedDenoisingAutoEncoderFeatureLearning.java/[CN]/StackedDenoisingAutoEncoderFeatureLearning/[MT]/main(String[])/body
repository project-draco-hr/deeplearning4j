{
  RandomGenerator gen=new MersenneTwister(123);
  MnistDataFetcher fetcher=new MnistDataFetcher(true);
  fetcher.fetch(30000);
  DataSet d2=fetcher.next();
  NeuralNetConfiguration conf=new NeuralNetConfiguration.Builder().momentum(5e-1f).weightInit(WeightInit.DISTRIBUTION).dist(Distributions.uniform(gen,784,10)).withActivationType(NeuralNetConfiguration.ActivationType.SAMPLE).lossFunction(LossFunctions.LossFunction.RECONSTRUCTION_CROSSENTROPY).rng(gen).learningRate(1e-1f).nIn(784).nOut(784).build();
  StackedDenoisingAutoEncoder d=new StackedDenoisingAutoEncoder.Builder().configure(conf).hiddenLayerSizes(new int[]{500,250,200,250,500}).build();
  d.getOutputLayer().conf().setActivationFunction(Activations.softMaxRows());
  d.getOutputLayer().conf().setLossFunction(LossFunctions.LossFunction.RECONSTRUCTION_CROSSENTROPY);
  d2.setLabels(d2.getFeatureMatrix());
  d.fit(d2);
}

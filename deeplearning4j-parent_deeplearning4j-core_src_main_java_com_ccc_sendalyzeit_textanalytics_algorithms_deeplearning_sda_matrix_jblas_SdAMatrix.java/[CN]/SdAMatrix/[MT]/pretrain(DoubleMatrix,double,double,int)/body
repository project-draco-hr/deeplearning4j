{
  if (this.input == null)   initializeLayers(input);
  DoubleMatrix layerInput=null;
  for (int i=0; i < nLayers; i++) {
    if (i == 0)     layerInput=input;
 else     layerInput=this.sigmoidLayers[i - 1].sample_h_given_v(layerInput);
    DenoisingAutoEncoderMatrix da=(DenoisingAutoEncoderMatrix)this.layers[i];
    HiddenLayerMatrix h=this.sigmoidLayers[i];
    for (int epoch=0; epoch < epochs; epoch++) {
      da.train(layerInput,lr,corruption_level);
      if (h.W != (da.W))       h.W=da.W;
      if (h.b != da.hBias)       h.b=da.hBias;
    }
  }
}

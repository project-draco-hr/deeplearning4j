{
  if (shape.length == 2) {
    if (ordering == NDArrayFactory.C) {
      INDArray ret=NDArrays.create(data,new int[]{shape[0],1},new int[]{stride[0],1},offset + c,ordering);
      return ret;
    }
 else {
      INDArray ret=NDArrays.create(data,new int[]{shape[0]},new int[]{stride[0]},offset + c * rows(),ordering);
      return ret;
    }
  }
 else   if (isColumnVector() && c == 0)   return this;
 else   throw new IllegalArgumentException("Unable to getFromOrigin column of non 2d matrix");
}

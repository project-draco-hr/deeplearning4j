{
  if (shape.length == 2) {
    if (ordering == NDArrayFactory.C) {
      INDArray ret=NDArrays.create(data,new int[]{shape[1]},new int[]{stride[1]},offset + r * columns(),ordering);
      return ret;
    }
 else {
      INDArray ret=NDArrays.create(data,new int[]{shape[1]},new int[]{stride[1]},offset + r,ordering);
      return ret;
    }
  }
 else   if (isRowVector() && r == 0)   return this;
 else   throw new IllegalArgumentException("Unable to getFromOrigin row of non 2d matrix");
}

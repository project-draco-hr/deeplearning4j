{
  DoubleMatrix input=new DoubleMatrix(new double[][]{{0.4,0.5,0.5,0.,0.,0.},{0.5,0.3,0.5,0.,0.,0.},{0.4,0.5,0.5,0.,0.,0.},{0.,0.,0.5,0.3,0.5,0.},{0.,0.,0.5,0.4,0.5,0.},{0.,0.,0.5,0.5,0.5,0.}});
  RandomGenerator g=new MersenneTwister(123);
  CRBM r=new CRBM.Builder().numberOfVisible(input.getRow(0).columns).numHidden(10).withRandom(g).build();
  r.trainTillConvergence(input,0.01,new Object[]{1,0.01,1});
  DoubleMatrix test=new DoubleMatrix(new double[][]{{0.5,0.5,0.,0.,0.,0.},{0.,0.,0.,0.5,0.5,0.}});
  log.info(r.reconstruct(test).toString());
}

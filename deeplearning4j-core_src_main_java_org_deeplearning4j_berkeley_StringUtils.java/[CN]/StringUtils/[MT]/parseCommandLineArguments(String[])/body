{
  Map<String,String> result=new HashMap<String,String>();
  String key, value;
  for (int i=0; i < args.length; i++) {
    key=args[i];
    if (key.charAt(0) == '-') {
      if (i + 1 < args.length) {
        value=args[i + 1];
        if (value.charAt(0) != '-') {
          result.put(key,value);
          i++;
        }
 else {
          result.put(key,null);
        }
      }
 else {
        result.put(key,null);
      }
    }
  }
  return result;
}

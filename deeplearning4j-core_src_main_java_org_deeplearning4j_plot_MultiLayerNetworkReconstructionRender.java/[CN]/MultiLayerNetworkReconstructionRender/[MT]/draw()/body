{
  while (iter.hasNext()) {
    DataSet first=iter.next();
    INDArray reconstruct=null;
    if (reconLayer < 0)     reconstruct=network.output(first.getFeatureMatrix());
 else     reconstruct=network.reconstruct(first.getFeatureMatrix(),reconLayer);
    for (int j=0; j < first.numExamples(); j++) {
      INDArray draw1=first.get(j).getFeatureMatrix().mul(255);
      INDArray reconstructed2=reconstruct.getRow(j);
      INDArray draw2=reconstructed2.mul(255 * 255);
      DrawReconstruction d=new DrawReconstruction(draw1);
      d.title="REAL";
      d.draw();
      DrawReconstruction d2=new DrawReconstruction(draw2);
      d2.title="TEST";
      d2.draw();
      Thread.sleep(10000);
      d.frame.dispose();
      d2.frame.dispose();
    }
  }
}

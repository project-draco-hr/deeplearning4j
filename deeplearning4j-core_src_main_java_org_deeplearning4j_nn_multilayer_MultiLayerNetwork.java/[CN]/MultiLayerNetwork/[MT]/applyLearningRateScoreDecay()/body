{
  for (  Layer layer : layers) {
    if (!layer.conf().getLearningRateByParam().isEmpty()) {
      for (      Map.Entry<String,Double> lrPair : layer.conf().getLearningRateByParam().entrySet())       layer.conf().setLearningRateByParam(lrPair.getKey(),lrPair.getValue() * (layer.conf().getLrDecayRate() + Nd4j.EPS_THRESHOLD));
    }
  }
}

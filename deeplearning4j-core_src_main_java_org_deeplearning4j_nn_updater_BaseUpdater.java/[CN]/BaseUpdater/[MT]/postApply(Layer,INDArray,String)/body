{
  NeuralNetConfiguration conf=layer.conf();
  INDArray params=layer.getParam(param);
  if (conf.isUseRegularization() && conf.getL2() > 0 && !(param.equals(DefaultParamInitializer.BIAS_KEY)))   gradient.subi(params.mul(conf.getL2()));
  if (conf.isUseRegularization() && conf.getL1() < 0 && !(param.equals(DefaultParamInitializer.BIAS_KEY)))   gradient.subi(Transforms.sign(params).muli(conf.getL1()));
  if (conf.isConstrainGradientToUnitNorm())   gradient.divi(gradient.norm2(Integer.MAX_VALUE));
  gradient.divi((double)layer.input().size(0));
}

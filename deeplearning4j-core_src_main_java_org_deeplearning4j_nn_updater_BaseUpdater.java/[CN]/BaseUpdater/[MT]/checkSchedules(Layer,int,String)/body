{
  NeuralNetConfiguration conf=layer.conf();
  if (conf.getLayer().getLearningRateAfter().containsKey(iteration)) {
    conf.getLayer().setLearningRate(conf.getLayer().getLearningRateAfter().get(iteration));
    if (updaterForVariable.get(param) != null)     updaterForVariable.get(param).update(conf.getLayer().getLearningRateAfter().get(iteration));
  }
  if (conf.getLayer().getMomentumAfter().containsKey(iteration)) {
    conf.getLayer().setMomentum(conf.getLayer().getMomentumAfter().get(iteration));
    if (updaterForVariable.get(param) != null)     updaterForVariable.get(param).update(conf.getLayer().getLearningRate(),conf.getLayer().getMomentumAfter().get(iteration));
  }
}

{
  if (index == 0)   return new CRBM.Builder().withHBias(hBias).numberOfVisible(nVisible).numHidden(nHidden).withInput(input).withL2(0.1).fanIn(fanIn).renderWeights(renderWeightsEveryNEpochs).withRandom(rng).withWeights(W).build();
 else   return new RBM.Builder().withHBias(hBias).numberOfVisible(nVisible).numHidden(nHidden).withInput(input).withL2(0.1).fanIn(fanIn).renderWeights(renderWeightsEveryNEpochs).withRandom(rng).withWeights(W).build();
}

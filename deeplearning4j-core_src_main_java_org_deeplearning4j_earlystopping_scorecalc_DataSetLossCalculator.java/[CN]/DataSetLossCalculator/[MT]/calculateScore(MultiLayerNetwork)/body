{
  dataSetIterator.reset();
  double lossSum=0.0;
  int exCount=0;
  while (dataSetIterator.hasNext()) {
    DataSet dataSet=dataSetIterator.next();
    int nEx=dataSet.getFeatureMatrix().size(0);
    lossSum+=network.score(dataSet) * nEx;
    exCount+=nEx;
  }
  if (average)   return lossSum / exCount;
 else   return lossSum;
}

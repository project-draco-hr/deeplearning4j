{
  DoubleMatrix layer_input=null;
  for (int i=0; i < n_layers; i++) {
    if (i == 0)     layer_input=input;
 else     layer_input=this.sigmoid_layers[i - 1].sample_h_given_v(layer_input);
    DenoisingAutoEncoderMatrix da=this.dA_layers[i];
    for (int epoch=0; epoch < epochs; epoch++)     da.train(layer_input,lr,corruption_level);
  }
}

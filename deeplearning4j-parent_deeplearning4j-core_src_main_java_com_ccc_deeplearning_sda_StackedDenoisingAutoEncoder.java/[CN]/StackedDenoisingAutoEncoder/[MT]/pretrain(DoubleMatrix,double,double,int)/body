{
  if (this.input == null)   initializeLayers(input.dup());
  DoubleMatrix layerInput=null;
  for (int i=0; i < nLayers; i++) {
    if (i == 0)     layerInput=input;
 else     layerInput=this.sigmoidLayers[i - 1].sampleHGivenV(layerInput);
    layers[i].trainTillConvergence(layerInput,lr,new Object[]{corruptionLevel});
  }
}

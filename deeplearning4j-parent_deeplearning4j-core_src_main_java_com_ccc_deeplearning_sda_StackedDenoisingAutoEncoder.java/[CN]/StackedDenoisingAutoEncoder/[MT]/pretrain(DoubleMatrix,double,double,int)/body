{
  if (this.input == null)   initializeLayers(input.dup());
  DoubleMatrix layerInput=null;
  for (int i=0; i < nLayers; i++) {
    if (i == 0)     layerInput=input;
 else     layerInput=this.sigmoidLayers[i - 1].sampleHGivenV(layerInput);
    Integer numTimesOver=1;
    Double bestLoss=layers[i].getReConstructionCrossEntropy();
    for (int epoch=0; epoch < epochs; epoch++) {
      boolean trainedProperly=this.trainNetwork(this.layers[i],this.sigmoidLayers[i],epoch,i,layerInput,lr,bestLoss,new Object[]{corruptionLevel});
      if (!trainedProperly)       numTimesOver++;
      if (numTimesOver >= 30) {
        log.info("Breaking early; " + numTimesOver);
      }
    }
  }
}

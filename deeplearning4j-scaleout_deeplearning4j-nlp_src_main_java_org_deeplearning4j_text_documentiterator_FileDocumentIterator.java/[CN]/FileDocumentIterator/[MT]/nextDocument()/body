{
  try {
    if (lineIterator != null && !lineIterator.hasNext()) {
      File next=iter.next();
      lineIterator.close();
      lineIterator=FileUtils.lineIterator(next);
    }
    return new BufferedInputStream(IOUtils.toInputStream(lineIterator.nextLine()));
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
}

{
  INDArray ret=null;
  for (int i=0; i < input.slices(); i++) {
    INDArray downSampled=Transforms.downSample(input.slice(i),conf.getStride());
    if (ret == null) {
      ret=Nd4j.create(Ints.concat(new int[]{input.slices()},downSampled.shape()));
    }
    ret.putSlice(i,downSampled);
  }
  return ret;
}

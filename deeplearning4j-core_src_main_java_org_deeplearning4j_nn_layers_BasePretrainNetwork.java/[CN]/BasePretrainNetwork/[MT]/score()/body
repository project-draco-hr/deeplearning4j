{
  if (conf.getLossFunction() != LossFunctions.LossFunction.RECONSTRUCTION_CROSSENTROPY)   return -LossFunctions.score(input,conf.getLossFunction(),transform(input),conf.getL2(),conf.isUseRegularization());
 else {
    return -LossFunctions.reconEntropy(input,getParam(PretrainParamInitializer.BIAS_KEY),getParam(PretrainParamInitializer.VISIBLE_BIAS_KEY),getParam(PretrainParamInitializer.WEIGHT_KEY),conf.getActivationFunction());
  }
}

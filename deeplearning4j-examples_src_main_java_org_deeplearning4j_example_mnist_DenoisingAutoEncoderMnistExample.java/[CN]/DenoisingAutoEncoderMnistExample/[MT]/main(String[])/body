{
  DenoisingAutoEncoder autoEncoder=new DenoisingAutoEncoder.Builder().withOptmizationAlgo(NeuralNetwork.OptimizationAlgorithm.GRADIENT_DESCENT).numberOfVisible(784).numHidden(600).build();
  DataSetIterator iter=new MultipleEpochsIterator(50,new MnistDataSetIterator(10,30));
  while (iter.hasNext()) {
    DataSet next=iter.next();
    autoEncoder.train(next.getFeatureMatrix(),1e-1,0.3,10);
  }
  iter.reset();
  FilterRenderer render=new FilterRenderer();
  render.renderFilters(autoEncoder.getW(),"example-render.jpg",28,28,10);
  while (iter.hasNext()) {
    DataSet first=iter.next();
    INDArray reconstruct=autoEncoder.reconstruct(first.getFeatureMatrix());
    for (int j=0; j < first.numExamples(); j++) {
      INDArray draw1=first.get(j).getFeatureMatrix().mul(255);
      INDArray reconstructed2=reconstruct.getRow(j);
      INDArray draw2=Sampling.binomial(reconstructed2,1,new MersenneTwister(123)).mul(255);
      DrawReconstruction d=new DrawReconstruction(draw1);
      d.title="REAL";
      d.draw();
      DrawReconstruction d2=new DrawReconstruction(draw2,1000,1000);
      d2.title="TEST";
      d2.draw();
      Thread.sleep(10000);
      d.frame.dispose();
      d2.frame.dispose();
    }
  }
}

{
  histogram(new String[]{"W","hbias","vbias","w-gradient","hbias-gradient","vbias-gradient"},new INDArray[]{network.getParam(DefaultParamInitializer.WEIGHT_KEY),network.getParam(PretrainParamInitializer.BIAS_KEY),network.getParam(PretrainParamInitializer.VISIBLE_BIAS_KEY),gradient.gradientForVariable().get(DefaultParamInitializer.WEIGHT_KEY),gradient.gradientForVariable().get(DefaultParamInitializer.BIAS_KEY),gradient.gradientForVariable().get(PretrainParamInitializer.VISIBLE_BIAS_KEY)});
  plotActivations(network);
  FilterRenderer render=new FilterRenderer();
  try {
    INDArray w=network.getParam(DefaultParamInitializer.WEIGHT_KEY).dup();
    render.renderFilters(w,"currimg.png",(int)Math.sqrt(w.rows()),(int)Math.sqrt(w.rows()),patchesPerRow);
  }
 catch (  Exception e) {
    log.error("Unable to plot filter, continuing...",e);
  }
}

{
  IrisDataFetcher fetcher=new IrisDataFetcher();
  fetcher.fetch(150);
  DataSet d=fetcher.next();
  d.normalizeZeroMeanZeroUnitVariance();
  NeuralNetConfiguration conf=new NeuralNetConfiguration.Builder().lossFunction(LossFunctions.LossFunction.RMSE_XENT).visibleUnit(org.deeplearning4j.nn.conf.layers.RBM.VisibleUnit.GAUSSIAN).hiddenUnit(org.deeplearning4j.nn.conf.layers.RBM.HiddenUnit.GAUSSIAN).learningRate(1e-1f).nIn(d.numInputs()).nOut(3).layer(new org.deeplearning4j.nn.conf.layers.RBM()).build();
  RBM r=LayerFactories.getFactory(conf).create(conf);
  r.fit(d.getFeatureMatrix());
}

{
  if (dir == null) {
    File directory=new File(indexPath);
    log.info("Creating directory " + directory.getCanonicalPath());
    FileUtils.deleteDirectory(directory);
    dir=FSDirectory.open(Paths.get(URI.create("file:" + directory.getAbsolutePath())));
    if (!directory.exists()) {
      directory.mkdir();
    }
  }
}

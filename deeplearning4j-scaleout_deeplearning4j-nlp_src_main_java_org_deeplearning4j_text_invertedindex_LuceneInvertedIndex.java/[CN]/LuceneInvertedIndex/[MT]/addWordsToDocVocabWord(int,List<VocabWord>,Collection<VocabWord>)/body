{
  Document d=new Document();
  for (  VocabWord word : words)   d.add(new TextField(WORD_FIELD,word.getWord(),Field.Store.YES));
  for (  VocabWord s : label)   d.add(new TextField(LABEL,s.getWord(),Field.Store.YES));
  totalWords.set(totalWords.get() + words.size());
  addWords(words);
  try {
    getWriter().addDocument(d);
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
}

{
  if (reader == null) {
    try {
      writer.commit();
      reader=DirectoryReader.open(dir);
      searcher=new IndexSearcher(reader);
    }
 catch (    Exception e) {
      throw new RuntimeException(e);
    }
  }
 else   if (readerClosed.get()) {
    try {
      reader=DirectoryReader.open(dir);
      searcher=new IndexSearcher(reader);
      readerClosed.set(false);
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
  }
}

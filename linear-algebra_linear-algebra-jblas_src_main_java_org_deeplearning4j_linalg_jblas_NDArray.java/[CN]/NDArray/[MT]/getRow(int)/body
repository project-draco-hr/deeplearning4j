{
  if (shape.length == 2) {
    if (ordering == NDArrayFactory.C) {
      NDArray ret=new NDArray(data,new int[]{shape[1]},new int[]{stride[1]},offset + r * columns(),ordering);
      return ret;
    }
 else {
      NDArray ret=new NDArray(data,new int[]{shape[1]},new int[]{stride[0]},offset + r * columns(),ordering);
      return ret;
    }
  }
 else   throw new IllegalArgumentException("Unable to getFromOrigin row of non 2d matrix");
}

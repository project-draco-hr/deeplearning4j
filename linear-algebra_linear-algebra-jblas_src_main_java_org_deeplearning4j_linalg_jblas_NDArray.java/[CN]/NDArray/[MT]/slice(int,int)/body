{
  if (slice == 0)   return slice(dimension);
  if (shape.length == 2) {
    if (slice != 1)     throw new IllegalArgumentException("Unable to retrieve dimension " + slice + " from a 2d array");
    return new NDArray(data,ArrayUtil.of(shape[0]),ArrayUtil.of(stride[0]),offset + dimension * stride[1]);
  }
  return new NDArray(data,ArrayUtil.removeIndex(shape,dimension),ArrayUtil.removeIndex(stride,dimension),offset + dimension * stride[slice]);
}

{
  if (shape.length == 2) {
    if (dimension == 1) {
      return new NDArray(data,new int[]{1,columns()},ArrayUtil.removeIndex(stride,dimension),offset + slice * stride[dimension]);
    }
 else     if (dimension == 0) {
      return new NDArray(data,new int[]{rows(),1},ArrayUtil.removeIndex(stride,dimension),offset + slice * stride[dimension]);
    }
  }
  if (slice == shape.length - 1)   return slice(dimension);
  return new NDArray(data,ArrayUtil.removeIndex(shape,dimension),ArrayUtil.removeIndex(stride,dimension),offset + slice * stride[dimension]);
}

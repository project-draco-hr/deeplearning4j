{
  if (isColumnVector()) {
    if (j > 0)     throw new IllegalArgumentException("Trying to access column > " + columns() + " at "+ j);
    return get(i);
  }
 else   if (isRowVector()) {
    if (i > 0)     throw new IllegalArgumentException("Trying to access row > " + rows() + " at "+ i);
    return get(j);
  }
  return (double)get(new int[]{i,j}).element();
}

{
  return new OneForOneStrategy(0,Duration.Zero(),new Function<Throwable,Directive>(){
    public Directive apply(    Throwable cause){
      log.error("Problem with processing",cause);
      mediator.tell(new DistributedPubSubMediator.Publish(MasterActor.MASTER,new ClearWorker(id)),getSelf());
      return SupervisorStrategy.restart();
    }
  }
);
}

{
  if (!conf.isUseRegularization() || conf.getL2() <= 0.0)   return 0.0;
  double l2=Transforms.pow(getParam(LSTMParamInitializer.RECURRENT_WEIGHTS),2).sum(Integer.MAX_VALUE).getDouble(0) + Transforms.pow(getParam(LSTMParamInitializer.DECODER_WEIGHTS),2).sum(Integer.MAX_VALUE).getDouble(0);
  return 0.5 * conf.getL2() * l2;
}

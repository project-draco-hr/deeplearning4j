{
  LayerFactory layerFactory=LayerFactories.getFactory(OutputLayer.class);
  NeuralNetConfiguration conf=new NeuralNetConfiguration.Builder().lossFunction(LossFunctions.LossFunction.MCXENT).optimizationAlgo(OptimizationAlgorithm.GRADIENT_DESCENT).activationFunction("softmax").iterations(100).weightInit(WeightInit.ZERO).iterationListener(new ScoreIterationListener(1)).learningRate(1e-1).nIn(4).nOut(3).layerFactory(layerFactory).build();
  OutputLayer l=layerFactory.create(conf);
  DataSetIterator iter=new IrisDataSetIterator(150,150);
  DataSet next=iter.next();
  SplitTestAndTrain trainTest=next.splitTestAndTrain(110);
  trainTest.getTrain().normalizeZeroMeanZeroUnitVariance();
  l.fit(trainTest.getTrain());
  DataSet test=trainTest.getTest();
  test.normalizeZeroMeanZeroUnitVariance();
  Evaluation eval=new Evaluation();
  INDArray output=l.output(test.getFeatureMatrix());
  eval.eval(test.getLabels(),output);
  log.info("Score " + eval.stats());
}

{
  if (data != null)   dataPointer=Pointer.to(data()).withByteOffset(offset() * Sizeof.FLOAT);
  JCublas.cublasAlloc(length,Sizeof.FLOAT,pointer);
  if (ordering == NDArrayFactory.FORTRAN) {
    if (isMatrix() || isColumnVector()) {
      JCublas.cublasSetMatrix(rows(),columns(),Sizeof.FLOAT,dataPointer,rows(),pointer,rows());
    }
 else     JCublas.cublasSetVector(length,Sizeof.FLOAT,dataPointer,stride[0],pointer,stride[0]);
  }
 else {
    JCublas.cublasSetVector(length,Sizeof.FLOAT,dataPointer,1,pointer,1);
  }
}

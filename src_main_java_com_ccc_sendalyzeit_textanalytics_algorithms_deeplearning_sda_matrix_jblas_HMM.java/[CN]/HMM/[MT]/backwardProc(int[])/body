{
  int T=o.length;
  double[][] bwd=new double[numStates][T];
  for (int i=0; i < numStates; i++)   bwd[i][T - 1]=1;
  for (int t=T - 2; t >= 0; t--) {
    for (int i=0; i < numStates; i++) {
      bwd[i][t]=0;
      for (int j=0; j < numStates; j++)       bwd[i][t]+=(bwd[j][t + 1] * a[i][j] * b[j][o[t + 1]]);
    }
  }
  return bwd;
}

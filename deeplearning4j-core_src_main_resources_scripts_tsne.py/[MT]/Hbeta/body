def Hbeta(D=np.array([]), beta=1.0):
    'Compute the perplexity and the P-row for a specific value of the precision of a Gaussian distribution.'
    P = np.exp(((- D.copy()) * beta))
    sumP = sum(P)
    H = (np.log(sumP) + ((beta * np.sum((D * P))) / sumP))
    P = (P / (sumP + 1e-06))
    return (H, P)

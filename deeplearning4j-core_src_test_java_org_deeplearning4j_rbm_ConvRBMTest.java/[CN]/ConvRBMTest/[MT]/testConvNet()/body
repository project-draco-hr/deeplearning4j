{
  ConvolutionalRBM rbm=new ConvolutionalRBM.Builder().withFilterSize(new int[]{7,7}).withNumFilters(new int[]{4,4}).withStride(new int[]{2,2}).withVisibleSize(new int[]{28,28}).numberOfVisible(28).numHidden(28).renderWeights(100).build();
  MnistDataFetcher fetcher=new MnistDataFetcher(true);
  fetcher.fetch(1);
  DataSet d=fetcher.next();
  INDArray train=d.getFeatureMatrix().reshape(28,28);
  rbm.trainTillConvergence(train,1e-2,new Object[]{1,1e-2,100});
}

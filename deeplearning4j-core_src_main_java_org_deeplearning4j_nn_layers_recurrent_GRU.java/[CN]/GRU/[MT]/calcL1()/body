{
  if (!conf.isUseRegularization() || conf.getLayer().getL1() <= 0.0)   return 0.0;
  double l1=Transforms.abs(getParam(GRUParamInitializer.RECURRENT_WEIGHT_KEY)).sum(Integer.MAX_VALUE).getDouble(0) + Transforms.abs(getParam(GRUParamInitializer.INPUT_WEIGHT_KEY)).sum(Integer.MAX_VALUE).getDouble(0);
  return conf.getLayer().getL1() * l1;
}

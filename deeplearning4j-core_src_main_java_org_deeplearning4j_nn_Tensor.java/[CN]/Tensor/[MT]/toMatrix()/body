{
  DoubleMatrix ret=new DoubleMatrix(rows() * slices(),columns());
  int currSlice=0;
  int row=0;
  for (int i=0; i < ret.rows; i++) {
    DoubleMatrix slice=getSlice(currSlice);
    DoubleMatrix rowM=slice.getRow(row);
    ret.putRow(i,rowM);
    row++;
    if (row >= rows()) {
      row=0;
      currSlice++;
    }
  }
  return ret;
}

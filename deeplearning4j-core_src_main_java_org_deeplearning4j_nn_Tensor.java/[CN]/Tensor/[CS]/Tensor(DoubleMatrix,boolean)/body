{
  this.rows=t.rows;
  this.perMatrixRows=1;
  this.columns=t.columns;
  if (copy) {
    this.data=new double[t.length];
    System.arraycopy(t.data,0,this.data,0,this.data.length);
    this.rows=t.rows;
    this.perMatrixRows=1;
    this.columns=t.columns;
  }
 else   this.data=t.data;
  this.length=this.rows * this.columns;
}

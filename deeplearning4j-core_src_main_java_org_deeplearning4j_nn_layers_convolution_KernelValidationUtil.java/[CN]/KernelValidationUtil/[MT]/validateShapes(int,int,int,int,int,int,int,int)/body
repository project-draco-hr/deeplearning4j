{
  if (kernelHeight >= inHeight + padHeight)   throw new InvalidInputTypeException("Invalid input: activations into layer are h=" + inHeight + " but kernel size is "+ kernelHeight+ " with padding "+ padHeight);
  if (kernelWidth >= inWidth + padWidth)   throw new InvalidInputTypeException("Invalid input: activations into layer are w=" + inWidth + " but kernel size is "+ kernelWidth+ " with padding "+ padWidth);
}

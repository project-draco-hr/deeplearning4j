{
  int wLength=network.getW().length();
  int vBiasLength=network.getvBias().length();
  if (index < wLength)   return index;
 else   if (index >= wLength + vBiasLength) {
    int hIndex=index - wLength - vBiasLength;
    return hIndex;
  }
 else {
    int vIndex=index - wLength;
    return vIndex;
  }
}
